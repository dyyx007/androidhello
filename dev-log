StringBuilder sb = new StringBuilder();
		Intent intent = getIntent();  
		sb.append("intent="+intent);
		if(intent!=null){
		    Uri uri = intent.getData();  
		    sb.append(",uri="+uri);
		    if(uri!=null){
		    	String name = uri.getQueryParameter("name");
		    	sb.append(",name="+name);
		    }
		}



