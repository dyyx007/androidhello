<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    
   <TextView android:id="@+id/textViewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db utils"
        />
   
    <EditText android:id="@+id/textEditSql"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:inputType="textMultiLine"  
             android:minLines="6"
             android:maxLines="6"   
              android:gravity="top|left"    
       /> 
       
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
          
         <Button
            android:id="@+id/btnQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query" 
            android:onClick="clickHandle"
            />
         
           <Button
            android:id="@+id/btnRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run" 
            android:onClick="clickHandle"
            />
           
           
                <Button
            android:id="@+id/btnGetTables"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Tables" 
            android:onClick="clickHandle"
            />
         
         <Button
            android:id="@+id/btnViewColumnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Column Info" 
            android:onClick="clickHandle"
            />
         <!-- 
           <Button
            android:id="@+id/btnViewTableInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Table Info" 
            android:onClick="clickHandle"
            />
            -->
            
        
      </LinearLayout>
      
      
       <EditText android:id="@+id/textEditResult"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:inputType="textMultiLine"  
              android:gravity="top|left"    
       />  

  
   

</LinearLayout>
