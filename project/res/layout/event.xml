<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

    <com.dyyx.androidhello.view.EventTestLayout
        android:id="@+id/eventTestLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" >

        <com.dyyx.androidhello.view.EventTestButton
            android:id="@+id/eventTestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Test Button" 
            android:onClick="clickHandle"
            />
        
        
         <Button
            android:id="@+id/btn001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button001" 
            android:onClick="clickHandle"/>
        
    </com.dyyx.androidhello.view.EventTestLayout>
    
    
     <TextView android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        />
    
    <View android:layout_height="3dp"
          android:layout_width="fill_parent"
          android:background="#0000ff"/>
    
     <Button
            android:id="@+id/btn002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button002" 
            android:onClick="clickHandle"
            />
     
      <Button
            android:id="@+id/btn003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button003" 
            android:onClick="clickHandle"/>

</LinearLayout>