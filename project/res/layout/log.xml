<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    
   <EditText android:id="@+id/textEditMaxLines"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="max lines"
             android:inputType="number"
             android:singleLine="true"
             android:maxLength="8"     
   /> 
    
  <!--  horizontal  vertical -->
  
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
      
       <Button android:text="showLogs" 
        android:id="@+id/btnShowLogs" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:onClick="showLogs"
        /> 
        
       <Button android:text="clear" 
        android:id="@+id/btnClear" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:onClick="clearLogs"
        /> 
      
        
  </LinearLayout>
  
  
  
  
       <EditText android:id="@+id/textEditLogs"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:inputType="textMultiLine"         
       /> 
 
    
    
</LinearLayout>
